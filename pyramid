//inverted pyramid
#include<stdio.h>
int main()
{
    int i,j,n;
    n=10;
    for(i=10;i>=1;i--)
    {
        for(j=10;j>=1;j--)
        {
            if(i>=j)
            printf("* ");
            else
            printf(" ");
            }
            printf("\n");
        }
     return 0;
    }

//pyramid
#include<stdio.h>
int main()
{ int i,j,n;
 printf("enter the rows:");
 scanf("%d",&n);
for(i=1;i<=n;i++)
{ 
 for(j=1;j<=2*n-1;j++)
 {
   if(j>=n-(i-1)&&j<=n+(i-1))
      printf("*");
   else
     printf(" ");
 }
 printf("\n");
}
return 0;
}





